{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "rootDir": "src",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

